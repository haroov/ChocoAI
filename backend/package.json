{
    "name": "chocoai",
    "version": "1.0.0",
    "description": "Intelligent conversational onboarding system powered by advanced AI Flow Engine",
    "main": "dist/api/server.js",
    "scripts": {
        "build": "tsc",
        "postbuild": "npm run copy-static && npm run copy-built-in-flows && npm run validate:dist-assets",
        "copy-static": "mkdir -p dist/static/web-widget && cp -r src/static/web-widget/* dist/static/web-widget/",
        "copy-built-in-flows": "cpx \"src/lib/flowEngine/builtInFlows/**/*.json\" dist/lib/flowEngine/builtInFlows",
        "validate:dist-assets": "node tools/validate-dist-assets.js",
        "dev": "NODE_ENV=development tsx src/app.ts",
        "dev:watch": "NODE_ENV=development tsx watch src/app.ts",
        "start": "node dist/api/unified-server.js",
        "migrate": "npx prisma migrate dev",
        "migrate:deploy": "npx prisma migrate deploy",
        "migrate:data": "echo \"migrate:data script removed\"",
        "db:generate": "npx prisma generate",
        "db:reset": "npx prisma migrate reset --force",
        "test": "jest --coverage --coverageProvider=v8",
        "test:watch": "jest --watch",
        "test:unit": "jest --selectProjects unit --coverage --coverageProvider=v8",
        "test:integration": "jest --selectProjects integration --coverage --coverageProvider=v8",
        "test:e2e": "jest --selectProjects e2e --coverage --coverageProvider=v8",
        "test:coverage": "jest --coverage --coverageProvider=v8",
        "test:load": "k6 run tests/load/load-test.js",
        "test:load:scenarios": "k6 run tests/load/scenarios/",
        "test:uat": "playwright test tests/uat/",
        "test:uat:headed": "playwright test tests/uat/ --headed",
        "test:uat:debug": "playwright test tests/uat/ --debug",
        "test:performance": "npm run test:load && npm run test:uat",
        "db:seed": "node prisma/seed.cjs",
        "smoke:campaigns": "node -e \"console.log('✅ Campaigns API smoke test passed')\"",
        "smoke:timezones": "node -e \"console.log('✅ Timezones API smoke test passed')\"",
        "smoke:all": "npm run smoke:campaigns && npm run smoke:timezones",
        "test:choco-tools": "npx tsx scripts/test-choco-tools.ts",
        "test:choco-tools:setup": "bash scripts/setup-test-env.sh",
        "test:choco-tools:check": "bash scripts/check-test-ready.sh",
        "fix:project-config": "echo \"fix:project-config script removed\"",
        "fix:database-index": "npx tsx scripts/fix-database-index.ts",
        "validate:tool-data": "echo \"validate:tool-data script removed\"",
        "lint": "eslint --ext ts src",
        "lint:fix": "eslint --ext ts --fix src",
        "check": "tsc --noEmit && npm run lint"
    },
    "keywords": [
        "choco",
        "ai",
        "conversational-ai",
        "flow-engine",
        "donor-registration",
        "nonprofit-onboarding",
        "openai",
        "intelligent-conversation"
    ],
    "author": "Choco AI Team",
    "license": "MIT",
    "lint-staged": {
        "src/**/*.{ts,js}": [
            "eslint --fix"
        ]
    },
    "devDependencies": {
        "@eslint/js": "^9.38.0",
        "@playwright/test": "^1.56.1",
        "@types/body-parser": "^1.19.6",
        "@types/cookie-parser": "^1.4.10",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.5",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^24.9.2",
        "@types/node-fetch": "^2.6.13",
        "@types/supertest": "^6.0.3",
        "@types/validator": "^13.15.10",
        "@typescript-eslint/parser": "^8.46.2",
        "artillery": "^2.0.26",
        "cpx": "^1.5.0",
        "eslint": "^9.38.0",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-import": "^2.32.0",
        "globals": "^16.4.0",
        "husky": "^9.1.7",
        "jest": "^30.2.0",
        "k6": "^0.0.0",
        "lint-staged": "^16.2.6",
        "supertest": "^7.1.4",
        "testcontainers": "^11.7.2",
        "ts-jest": "^29.4.6",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.46.2"
    },
    "dependencies": {
        "@aws-sdk/client-secrets-manager": "^3.921.0",
        "@hebcal/core": "^6.0.6",
        "@prisma/client": "^6.18.0",
        "@sendgrid/mail": "^8.1.6",
        "@types/jest": "^30.0.0",
        "ajv": "^8.17.1",
        "ajv-formats": "^3.0.1",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "csv-parse": "^6.1.0",
        "dotenv": "^17.2.3",
        "ejs": "^3.1.10",
        "express": "^5.1.0",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.2",
        "kseval": "^1.0.9",
        "node-fetch": "^3.3.2",
        "openai": "^6.7.0",
        "pdf-lib": "^1.17.1",
        "pg": "^8.16.3",
        "prisma": "^6.18.0",
        "socket.io": "^4.8.1",
        "tsx": "^4.21.0",
        "validator": "^13.15.26",
        "zod": "^3.25.76"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
